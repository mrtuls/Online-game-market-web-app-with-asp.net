@model GamaWebSitesi.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>
    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileri</h2>
            <hr class="col-sm-9" />
            <p>Lütfen Sipariş Bilgilerinizi Giriniz.</p>
            <hr class="col-sm-9" />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-7">
                        <span class="badge bg-success">
                            @User.Identity.Name
                        </span>
                        
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Adres Başlığı</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Şehir</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Semt</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="inputEmail13" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Tamamla
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
